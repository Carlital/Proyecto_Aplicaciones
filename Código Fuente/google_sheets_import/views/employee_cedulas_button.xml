<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_tree_fix_cedulas" model="ir.ui.view">
        <field name="name">hr.employee.tree.fix.cedulas</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">true</attribute>
            </xpath>
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="action_fix_identification_digits" 
                            string=" Actualizar Cédulas a 10 dígitos" 
                            type="object" 
                            class="btn-primary"
                            confirm="¿Estás seguro de actualizar todas las cédulas de 9 a 10 dígitos? Esta acción no se puede deshacer."/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
