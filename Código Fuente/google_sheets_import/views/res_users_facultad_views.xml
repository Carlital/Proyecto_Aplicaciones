<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Tree de usuarios con columna Facultad -->
  <record id="view_res_users_tree_facultad" model="ir.ui.view">
    <field name="name">res.users.tree.facultad</field>
    <field name="model">res.users</field>
    <field name="arch" type="xml">
      <tree string="Users" multi_edit="1">
        <field name="name" readonly="1" on_change="1"/>
        <field name="login" readonly="1" on_change="1"/>
        <field name="lang" on_change="1"/>
        <field name="login_date" readonly="1"/>
        <field name="facultad"/>
        <field name="state"
               widget="badge"
               decoration-info="state == 'new'"
               decoration-success="state == 'active'"/>
      </tree>
    </field>
  </record>

</odoo>
