<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_cv_publication_tree" model="ir.ui.view">
        <field name="name">cv.publication.tree</field>
        <field name="model">cv.publication</field>
        <field name="arch" type="xml">
            <tree string="Publications">
                <field name="employee_id"/>
                <field name="publication_date"/>
                <field name="title"/>
                <field name="publication_type"/>
                <field name="indexing_database" optional="show"/>
                <field name="source" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cv_publication_form" model="ir.ui.view">
        <field name="name">cv.publication.form</field>
        <field name="model">cv.publication</field>
        <field name="arch" type="xml">
            <form string="Publication">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Publication title"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="publication_type"/>
                            <field name="publication_year"/>
                            <field name="publication_date"/>
                            <field name="language"/>
                        </group>
                        <group name="authorship" string="Authorship">
                            <field name="employee_id" placeholder="Empleado"/>
                        </group>
                    </group>
                    <group>
                        <group name="indexing" string="Indexing and Quality">
                            <field name="is_indexed" invisible="1"/>
                            <field name="indexing_database" invisible="not is_indexed"/>
                        </group>
                        <group name="metrics" string="Impact Metrics">
                            <field name="citation_age_years" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group name="control" string="Control and Source">
                            <field name="source"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_cv_publication_search" model="ir.ui.view">
        <field name="name">cv.publication.search</field>
        <field name="model">cv.publication</field>
        <field name="arch" type="xml">
            <search string="Search Publications">
                <field name="employee_id"/>
                <field name="title"/>
                <separator/>
                <filter string="Indexed" 
                        name="filter_indexed" 
                        domain="[('is_indexed','=',True)]"/>
                <separator/>
                <filter string="Articles" 
                        name="filter_article" 
                        domain="[('publication_type','=','article')]"/>
                <filter string="Books" 
                        name="filter_books" 
                        domain="[('publication_type','=','book')]"/>
                <separator/>
                <filter string="From N8N" 
                        name="filter_n8n" 
                        domain="[('source','=','import')]"/>
                <filter string="Manual Entry" 
                        name="filter_manual" 
                        domain="[('source','=','manual')]"/>
                <separator/>
                <filter string="Last 5 Years" 
                        name="filter_recent" 
                        domain="[('publication_year','&gt;=',context_today().year - 5)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employee" 
                            name="group_employee" 
                            context="{'group_by':'employee_id'}"/>
                    <filter string="Year" 
                            name="group_year" 
                            context="{'group_by':'publication_year'}"/>
                    <filter string="Publication Type" 
                            name="group_type" 
                            context="{'group_by':'publication_type'}"/>
                    <filter string="Source" 
                            name="group_source" 
                            context="{'group_by':'source'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cv_publication" model="ir.actions.act_window">
        <field name="name">Publications</field>
        <field name="res_model">cv.publication</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new publication record
            </p>
            <p>
                Track scientific publications authored or co-authored by employees.
                <br/>
                This normalized model replaces the legacy text field x_publicaciones_detalle.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_cv_publication"
              name="Publications"
              parent="menu_cv_importer_root"
              action="action_cv_publication"
              sequence="17"/>

</odoo>